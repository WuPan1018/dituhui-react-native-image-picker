<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--对话框样式-->
    <style name="dialog_map_option" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@drawable/shape_dialog_trans</item>
        <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!--对话框Dialog主题-->
    <style name="dialog_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_push</item>
        <item name="android:windowExitAnimation">@anim/anim_pull</item>
    </style>

</resources>